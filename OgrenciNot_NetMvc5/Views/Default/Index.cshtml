@using OgrenciNot_NetMvc5.Models.EntitiyFramework
@model List<TBL_DERSLER> 

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>

        <th>Ders Id</th>
        <th>Ders Adı</th>
        <th>İŞLEMLER</th>
    </tr>

    <tbody>

        @foreach (var ders in Model)
        {
            <tr>
                <td>@ders.DERSID</td>
                <td>@ders.DERSAD</td>
                <td><a href="/Default/Sil/@ders.DERSID" class="btn btn-danger">Sil</a>
                <a href="/Default/DersGetir/@ders.DERSID" class="btn btn-success" >Guncelle</a></td>
            </tr>
        }

    </tbody>

</table>
<a href="/Default/YeniDErs" class="btn btn-primary">Yeni Ders Kaydı</a>

